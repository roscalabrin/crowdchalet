<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Crowd Chalet</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <body class="<%= body_class %>">
    <%= render "flashes" %>
    
    <div id="user-widget">
      <% if current_user %>
        Welcome <strong><%= current_user.name %></strong>!
        <%= link_to "Sign out", logout_path, id: "sign_out" %>
      <% else %>
        <%= link_to "Sign in with Facebook", facebook_login_path, id: "sign_in" %>
      <% end %>
    </div>
    
    <%= yield %>
    <%= render "javascript" %>
  </body>
</html>
