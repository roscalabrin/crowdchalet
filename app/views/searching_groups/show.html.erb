<div class="group-show-page">
  <h1> <%= link_to "<- All Groups", searching_groups_path %></h1>
  <div class="side-image">
    <div class="images-wrapper"></div>
      <div class="side-image-content">
        <h4><%= @presenter.searching_group.location %></h4>
        <h1><h1> <%= @presenter.searching_group.name %></h1></h1>
        <p><%= @presenter.searching_group.description %></p>
        <div class="stats">
          <ul>
            <li><%= @presenter.searching_group.max_number_of_people %><span>Max number of people</span></li>
            <li> <%= @presenter.searching_group.number_of_people_missing %><span>Missing</span></li>
            <li><span></span></li>
          </ul>
        </div>
        </br>
        </br>
        <% if @presenter.member.empty? %>
          <div class="request-btn">
             <p id="request-text">Request to Join</p>
          </div>
        <% end %>
    </div>
  </div>

  <% if @presenter.member.empty? == false %>
    <%= render partial: "listings" %>
  <% end %>
</div>
